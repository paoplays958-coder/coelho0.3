-- ========================================
-- CLICK TP
-- ========================================
local TabClickTP = Window:MakeTab({
    Name = "Click TP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local ClickTPTool = nil

TabClickTP:AddSection({Name = "Teleporte"})

TabClickTP:AddButton({
    Name = "Ativar Click TP",
    Callback = function()
        local player = game.Players.LocalPlayer
        local backpack = player:WaitForChild("Backpack")
        
        if ClickTPTool then
            ClickTPTool:Destroy()
        end
        
        ClickTPTool = Instance.new("Tool")
        ClickTPTool.Name = "Click TP"
        ClickTPTool.RequiresHandle = false
        ClickTPTool.CanBeDropped = false
        
        ClickTPTool.Activated:Connect(function()
            local mouse = player:GetMouse()
            local character = player.Character
            
            if character and character:FindFirstChild("HumanoidRootPart") then
                local targetPosition = mouse.Hit.Position
                character.HumanoidRootPart.CFrame = CFrame.new(targetPosition + Vector3.new(0, 3, 0))
            end
        end)
        
        ClickTPTool.Parent = backpack
        
        redzlib:MakeNotification({
            Name = "Ativado",
            Content = "Equipe e clique para teleportar",
            Time = 4
        })
    end
})

TabClickTP:AddButton({
    Name = "Desativar Click TP",
    Callback = function()
        if ClickTPTool then
            ClickTPTool:Destroy()
            ClickTPTool = nil
            redzlib:MakeNotification({
                Name = "Desativado",
                Content = "Click TP removido",
                Time = 3
            })
        end
    end
})

-- ========================================
-- SPEED
-- ========================================
local TabSpeed = Window:MakeTab({
    Name = "Speed",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local SpeedEnabled = false
local CurrentSpeed = 16
local OriginalSpeed = 16

local function ApplySpeed()
    local player = game.Players.LocalPlayer
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        if SpeedEnabled then
            player.Character.Humanoid.WalkSpeed = CurrentSpeed
        else
            player.Character.Humanoid.WalkSpeed = OriginalSpeed
        end
    end
end

game:GetService("RunService").Heartbeat:Connect(function()
    if SpeedEnabled then
        ApplySpeed()
    end
end)

TabSpeed:AddSection({Name = "Velocidade"})

TabSpeed:AddToggle({
    Name = "Ativar",
    Default = false,
    Callback = function(Value)
        SpeedEnabled = Value
        ApplySpeed()
        
        if Value then
            redzlib:MakeNotification({
                Name = "Speed ON",
                Content = "Velocidade: " .. CurrentSpeed,
                Time = 2
            })
        else
            redzlib:MakeNotification({
                Name = "Speed OFF",
                Content = "Velocidade normal",
                Time = 2
            })
        end
    end
})

TabSpeed:AddSlider({
    Name = "Valor",
    Min = 0,
    Max = 100,
    Default = 16,
    Increment = 1,
    Callback = function(Value)
        CurrentSpeed = Value
        if SpeedEnabled then
            ApplySpeed()
        end
    end
})

TabSpeed:AddSection({Name = "Presets"})

TabSpeed:AddButton({
    Name = "Normal (16)",
    Callback = function()
        CurrentSpeed = 16
        ApplySpeed()
    end
})

TabSpeed:AddButton({
    Name = "Rápido (50)",
    Callback = function()
        CurrentSpeed = 50
        ApplySpeed()
    end
})

TabSpeed:AddButton({
    Name = "Muito Rápido (100)",
    Callback = function()
        CurrentSpeed = 100
        ApplySpeed()
    end
})

